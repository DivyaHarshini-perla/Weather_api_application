<body>
    <h1>Weather Report</h1>
    <div id="weather">
        <?php
        if ($_SERVER["REQUEST_METHOD"] == "POST") {
            $apiKey = 'fc6f5dcfd5ef5397c32a14f817d1d216';
            $city = $_POST["city"];
            $apiUrl = "https://api.openweathermap.org/data/2.5/weather?q=$city&appid=$apiKey";

            $weatherData = file_get_contents($apiUrl);

            if ($weatherData === false) {
                echo "Failed to fetch weather data.";
            } else {
                $weatherData = json_decode($weatherData);

                if (isset($weatherData->cod) && $weatherData->cod == "404") {
                    echo "No city found.";
                } else {
                    $weatherDescription = $weatherData->weather[0]->description;
                    $tempKelvin = $weatherData->main->temp;
                    $tempCelsius = $tempKelvin - 273.15;

                    echo "<p>Current weather in $city: $weatherDescription</p>";
                    echo "<p>Temperature: $tempCelsius Â°C</p>";
                }
            }
        }
        ?>
    </div>
    <form method="post" action="<?php echo htmlspecialchars($_SERVER["PHP_SELF"]); ?>">
        <label for="city">Enter City Name:</label>
        <input type="text" id="city" name="city">
        <button type="submit">Submit</button>
    </form>
</body>
